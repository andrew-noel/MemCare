<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:background="#2c4366"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Memcare "
        android:id="@+id/textView_header"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#fffafe"
        android:typeface="serif"
        android:layout_above="@+id/editText_username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/editText_username"
        android:singleLine="true"
        android:maxLines="1"

        android:background="@drawable/back"

        android:hint="Username"
        android:layout_above="@+id/editText_password"
        android:layout_alignLeft="@+id/textView_header"
        android:layout_alignStart="@+id/textView_header"
        android:layout_alignRight="@+id/button_login"
        android:layout_alignEnd="@+id/button_login" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Log in"
        android:id="@+id/button_login"
        android:width="400dp"
        android:background="#31486d"
        android:textColor="#fbfffd"
        android:textStyle="bold"
        android:textSize="18dp"
        android:layout_above="@+id/textView_registerLink"
        android:layout_alignLeft="@+id/button_cleardb"
        android:layout_alignStart="@+id/button_cleardb" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear DB"
        android:id="@+id/button_cleardb"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_password"
        android:background="#fdffff"
        android:hint="Password"
        android:password="true"
        android:layout_above="@+id/button_login"
        android:layout_alignRight="@+id/editText_username"
        android:layout_alignEnd="@+id/editText_username"
        android:layout_alignLeft="@+id/textView_header"
        android:layout_alignStart="@+id/textView_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="New User? Register here"
        android:id="@+id/textView_registerLink"
        android:textColor="#fefdff"
        android:clickable="true"
        android:layout_marginBottom="206dp"
        android:layout_above="@+id/button_cleardb"
        android:layout_alignLeft="@+id/button_login"
        android:layout_alignStart="@+id/button_login" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/brain_pic"
        android:layout_above="@+id/textView_header"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
