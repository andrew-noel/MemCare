<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ui.administer.adminster_takeTest"
    android:background="#2c4366"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Face Recognition Test"
        android:id="@+id/textView_header"
        android:layout_marginTop="62dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:id="@+id/editText_inputName"
        android:background="#fdffff"
        android:singleLine="true"
        android:width="300dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/mic"
        android:layout_toLeftOf="@+id/mic"
        android:hint="Enter Person&apos;s Name" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_faceImage"
        android:layout_below="@+id/textView_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/editText_inputName"
        android:background="#d4d4dd"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button_next"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/mic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/imageView_faceImage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOICE"
        android:id="@+id/mic"
        android:textColor="#fbffff"
        android:background="#010101"
        android:textSize="20dp"
        android:layout_alignTop="@+id/button_next"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/editText_inputName" />
</RelativeLayout>
