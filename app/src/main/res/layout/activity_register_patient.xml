<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ui.registration.patient_registration.RegisterPatientActivity"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Register Patient"
        android:id="@+id/textView_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="First Name:"
        android:id="@+id/textView_firstname"
        android:layout_below="@+id/textView_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="59dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_firstname"
        android:layout_alignBottom="@+id/textView_firstname"
        android:layout_toRightOf="@+id/textView_firstname"
        android:layout_toEndOf="@+id/textView_firstname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last Name:"
        android:id="@+id/textView_lastname"
        android:layout_below="@+id/textView_firstname"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_lastname"
        android:layout_alignBottom="@+id/textView_lastname"
        android:layout_alignRight="@+id/editText_firstname"
        android:layout_alignEnd="@+id/editText_firstname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Age:"
        android:id="@+id/textView_age"
        android:layout_marginTop="111dp"
        android:layout_below="@+id/textView_lastname"
        android:layout_alignLeft="@+id/textView_header"
        android:layout_alignStart="@+id/textView_header" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:id="@+id/checkBox_male"
        android:checked="false"
        android:layout_below="@+id/checkBox_female"
        android:layout_alignRight="@+id/numberPicker"
        android:layout_alignEnd="@+id/numberPicker" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Female"
        android:id="@+id/checkBox_female"
        android:checked="false"
        android:layout_alignTop="@+id/textView_gender"
        android:layout_alignLeft="@+id/checkBox_male"
        android:layout_alignStart="@+id/checkBox_male" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gender:"
        android:id="@+id/textView_gender"
        android:layout_above="@+id/button_register"
        android:layout_toLeftOf="@+id/button_register"
        android:layout_toStartOf="@+id/button_register"
        android:layout_marginBottom="91dp" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:layout_below="@+id/editText_lastname"
        android:layout_toRightOf="@+id/textView_age"
        android:layout_toEndOf="@+id/textView_age"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Register"
        android:id="@+id/button_register"
        android:layout_marginBottom="58dp"
        android:textSize="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
