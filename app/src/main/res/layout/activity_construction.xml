<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ui.construction.ConstructionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Test"
        android:id="@+id/textView_header"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="137dp"
        android:layout_marginStart="137dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_patientList"
        android:spinnerMode="dropdown"
        android:layout_alignTop="@+id/textView_selectPatient"
        android:layout_toRightOf="@+id/textView_dateOfCreation"
        android:layout_toEndOf="@+id/textView_dateOfCreation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select A Patient:"
        android:id="@+id/textView_selectPatient"
        android:layout_below="@+id/textView_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="83dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Test Type:"
        android:id="@+id/textView_testType"
        android:layout_alignTop="@+id/spinner_testType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_testType"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/spinner_patientList"
        android:layout_alignLeft="@+id/spinner_patientList"
        android:layout_alignStart="@+id/spinner_patientList"
        android:layout_marginTop="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Enter A Test Name: "
        android:id="@+id/textView_testName"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_testName"
        android:layout_alignTop="@+id/textView_testName"
        android:layout_toRightOf="@+id/textView_testName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Test"
        android:id="@+id/button_createTest"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editText_testName"
        android:layout_alignEnd="@+id/editText_testName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date of Creation:"
        android:id="@+id/textView_dateOfCreation"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/editText_testName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_insertDate"
        android:layout_alignTop="@+id/textView_dateOfCreation"
        android:layout_toRightOf="@+id/textView_dateOfCreation"
        android:layout_alignRight="@+id/editText_testName"
        android:layout_alignEnd="@+id/editText_testName"
        android:layout_alignBottom="@+id/textView_dateOfCreation" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear DB"
        android:id="@+id/button_clearDB"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp" />

</RelativeLayout>
