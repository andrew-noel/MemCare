<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ui.Results.Select_Patient_For_Results"
    android:background="#2c4366">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select a Patient"
        android:id="@+id/TextView_select_patient_header"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Please select a Patient:"
        android:id="@+id/textView_select_patient_spinnertext"
        android:layout_below="@+id/TextView_select_patient_header"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="104dp"
        android:textColor="#ffffff" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_patient"
        android:layout_alignTop="@+id/textView_select_patient_spinnertext"
        android:layout_toRightOf="@+id/textView_select_patient_spinnertext"
        android:layout_toEndOf="@+id/textView_select_patient_spinnertext"
        android:spinnerMode="dialog"
        android:background="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See Results"
        android:id="@+id/button_seeResults"
        android:layout_below="@+id/spinner_patient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="187dp" />
</RelativeLayout>
